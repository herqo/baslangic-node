<% include ../partials/header.ejs %>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 ">
                <h1>
                    <%= posts.title %>
                </h1>
                <div>
                    <img class="img-responsive" src="<%= posts.img %>" style="width: 100%;">
                </div>
                <br>
            </div>
            <div>
            </div>
            <div class="col-lg-8">
                <%- posts.content %>
                <br>
               
                <% if ( currentUser && currentUser.slug == posts.created.slug ) { %>
                <hr>

                <div class="col-lg-12">
                    <div class="col-lg-6">
                        <a class="btn btn-default btn-block" style="margin-left: -30px" href="/posts/<%= posts.slug%>/edit">Düznele <i class="glyphicon glyphicon-edit "></i>
                        </a>
                        
                        <br>
                    </div>
                    <div class="col-lg-6">
                        <form action="/posts/<%= posts.slug %>?_method=DELETE" method="post">
                         <button href="#" style="margin-right: -30px" class="btn btn-danger btn-block btn-lg">Sil <i class="glyphicon glyphicon-star"></i> </button>
                        
                        </form>
                        <br>
                    </div>
                </div>
                <% } %>
                <div class="thumbnail" style="display:flex;">
                    <p style="margin:auto">
                        <strong>
                            <%= posts.created.username %>
                        </strong>
                    </p>
                </div>
            </div>
            <div class="col-lg-12">
                <br>
                <div class="media comment-box">
                    <div class="text-right">
                        <p>
                            <a class="btn btn-default btn-sm glyphicon-user" href="/posts/<%= posts.slug %>/comment/new">Yorum Olutşur</a>
                        </p>
                    </div>
                    <br>
                    <% posts.comments.forEach( comment => { %>
                        <div class="col-lg-1">
                            <div class="media-left">
                                <a href="#">
                                    <img src="/images/default.jpeg" class="img-responsive user-photo">
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-11">
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <strong>
                                        <p>
                                            <%= comment.writer.username %>
                                        </p>
                                    </strong>
                                </h4>
                                <p>
                                    <%= comment.comment %>
                                        <span class="pull-right">20 Gün Önce</span>
                                </p>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>

    <br>
    <% include ../partials/footer.ejs %>