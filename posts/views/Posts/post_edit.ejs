<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <h1 class="page-header">
                Post Düzenle
            </h1>

            <form class="form-group" action="/posts/<%= posts.slug %>?_method=PUT" method="post">
                <div class="thumbnail">
                    <img src="<%= posts.img %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"
                           name="post[title]" value="<%= posts.title %>">
                </div>
                <div class="form-group">

                    <input class="form-control" type="text"
                           name="post[img]" value="<%= posts.img %>">
                </div>
                <div class="form-group">
                    <textarea name="post[content]" style="width: 100%" rows="15">
                        <%= posts.content%> </textarea>
                    <input type="hidden" name="post[<%posts.slug%>]">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Finish</button>
                </div>

            </form>
            <a class="btn btn-default btn-block" href="/posts">Postların Listelenme Sayfası</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>