<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <h1 class="page-header">
                Post Ekle
            </h1>

            <form method="post" class="form-group" action="/posts">
                <div class="form-group">
                    <input class="form-control" type="text"
                           name="name" placeholder="Post Başlığı">
                </div>
                <div class="form-group">

                    <input class="form-control" type="text"
                           name="img" placeholder="Post Resmi">
                </div>
                <div class="form-group">
                    <textarea name="content" style="width: 100%" rows="15"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Post Create</button>
                </div>

            </form>
            <a class="btn btn-default btn-block" href="/posts">Postların Listelenme Sayfası</a>
        </div>
    </div>

</div>

