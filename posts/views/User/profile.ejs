<% include ../partials/header.ejs %>
    <% if (currentUser.slug = params ) {  %>
        <div class="col-lg-12" style="padding-bottom: 20px;">
            <div class="card hovercard">
                <img src="/images/default.jpeg" style="border-radius: 20px; width:150px; margin: 0 auto" class="img-responsive">
                <div class="card-info" style="color: black; margin:20px; font-size: 20px; display: flex;">
                    <span class="card-title" style="margin:auto">
                        <%= currentUser.username %>
                    </span>
                    <p style="margin:auto">
                        <span class="glyphicon glyphicon-star"></span>
                        Sowftare Developer
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
            <div class="btn-pref btn-group btn-group-justified btn-group-lg">
                <div class="btn-group">
                    <button class="btn btn-primary" href="#tab1" data-toggle="tab">
                        <i class="glyphicon glyphicon-euro"></i>
                        <div class="hidden-xs">Post</div>
                    </button>
                </div>
                <div class="btn-group">
                    <button class="btn btn-default " href="#tab2" data-toggle="tab">
                        <i class="glyphicon glyphicon-heart"></i>
                        <div class="hidden-xs">Favoriler</div>
                    </button>
                </div>
                <div class="btn-group">
                    <button class="btn btn-default" href="#tab3" data-toggle="tab">
                        <i class="glyphicon glyphicon-alert"></i>
                        <div class="hidden-xs">Takipçiler</div>
                    </button>
                </div>
            </div>
            <div class="well">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab1" style="height: 100%">
                        <h1 style="text-align:center;">
                            Postlar
                        </h1>
                        <div class="row">
                            <% if (posts) { %>
                                <% posts.forEach( post => { %>
                                    <% if ( post.created.slug == currentUser.slug ) { %>
                                        <div class="col-lg-9" style="width: 50%">
                                            <div class="thumbnail" style="width: 500px">
                                                <img src="<%= post.img %>" class="img-responsive" style="height: 250px">
                                                <div class="caption text-center">
                                                    <h3>
                                                        <%= post.title %>
                                                    </h3>
                                                    <p>
                                                        <a class="btn btn-success" href="/posts/<%= post.slug %>">Detail</a>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% } ) %>
                                                <% } %>
                        </div>
                    </div>
                    <div class="tab-pane fade in" id="tab2" style="height: 300px">
                        <h1> Kullanıcısının Bilgileri
                            <h1>
                                <div class="text-center">
                                    <p>
                                        Kullanıcı E-Postası:
                                        <%= currentUser.email %>
                                    </p>
                                    <p>
                                        Kullancıdın Takma-Adı:
                                        <%= currentUser.username %>
                                    </p>
                                    <p>
                                        Kullanıcının Biosu:
                                        <%= currentUser.bio %>
                                    </p>
                                </div>
                    </div>
                    <div class="tab-pane fade in" id="tab3" style="height: 300px">
                        <h4>
                            Tab 3 İçerikleri
                        </h4>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $('.btn-pref .btn').click(function () {
                    $('.btn-pref .btn').removeClass('btn-primary').addClass('btn-default');
                    $(this).removeClass('btn-default').addClass('btn-primary');
                });
            });
        </script>
        <% } %>
</body>

</html>